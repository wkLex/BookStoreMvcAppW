@model BookStoreMvcAppW.Models.Domain.Genre
@{
    Layout = "_Layout";
}

<form class="w-40" asp-action="Create" method="post">
    <h2 class="pb-10">Create Genre</h2>
    <h3>Add a new Genre</h3>
    <div class="input-container">
        <label asp-for="GenreName" class="w-40">GenreName</label>
        <input type="text" class="input" asp-for="GenreName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="GenreName"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Genre/GenreList/">See and Edit all Genres</a>
    </div>
</form>