@model BookStoreMvcAppW.Models.Domain.Book
@{
    Layout = "_Layout";
}
@*@Html.ValidationSummary() <!--Is someting wrong with the model? Check-->
*@
<form class="w-40" asp-action="Update" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Update Book</h2>
    <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="BookImage">
  
    <div class="input-container">
        <label asp-for="Title" class="w-40">Book Title</label>
        <input type="text" class="input" asp-for="Title">   
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"></span>
    </div>

    <div class="input-container">
        <label asp-for="Author" class="w-40">Author</label>
        <input type="text" class="input" asp-for="Author">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Author"></span>
    </div>

    <div class="input-container">
        <label asp-for="Genres" class="w-40">Book</label>
        <select asp-items="Model.MultiGenreList" class="input" asp-for="Genres" multiple>
            <option value="">--select--</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Genres"></span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">Release Year</label>
        <input type="text" class="input" asp-for="ReleaseYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"></span>
    </div>

    <div class="input-container">
        <label asp-for="ImageFile" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Book/BookList/">All records</a>
    </div>
</form>